<div class='container-home' align='center'>
    <div class='text-center py-5'>
      <h1>PipoSa√∫de!</h1>
    </div>
    <div class="card p-5">
      <div class='row'>
        <div class='pl-5 ml-3 text-center'>
          <h3>Vamos te ajudar recuperar sua Senha!</h3>
        </div>
      </div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
          <div class='row mt-3 justify-content-center'>
            <div class="text-left">
              <%= f.label :email %>
              <%= f.email_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, class: 'form-control' %>
            </div>
          </div>
          <div class='row mt-4'>
            <p class='col-4'></p>
            <div class="form-group col-4">
              <%= f.button :submit, 'send reset instructions', class: 'form-control btn-home' %>
            </div>
          </div>
        <% end %>
        <div class='row mt-2 flex-column justify-content-center'>
          <p><%= render 'devise/shared/links' %></p>
        </div>
      </div>
</div>

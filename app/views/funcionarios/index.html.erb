<div class= "text-center container-home">
  <h1 class= "p-5"> Funcionários </h1>

  <div class= "d-flex p-5 text-center">
    <table class="table">
      <thead class="thead">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">CPF</th>
          <th scope="col">Email</th>
          <th scope="col">Benefícios</th>
          <th scope="col">Empresa</th>
        </tr>
      </thead>
      <tbody>
          <% @funcionarios.each do |funcionario| %>
            <tr>
              <th scope="row"><%= funcionario.id%></th>
              <td><%= funcionario.name %></td>
              <td><%= funcionario.cpf %></td>
              <td><%= funcionario.email %></td>
              <td>
                <% funcionario.planos.each do |plano|%>
                  <p><%= plano.nome %></p>
                <%end%>
              </td>
              <td><%= funcionario.user.nickname %></td>
              <td>
                <%= link_to 'Edit', edit_funcionario_path(funcionario) , class: 'btn btn-home' %>
                <%= link_to 'Delete', funcionarios_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mx-3"%>
              </td>
            </tr>
          <%end%>

      </tbody>
    </table>
  </div>
  <div class= "p-3">
    <%= link_to 'New', new_funcionario_path , class: 'btn-func' %>
    <%= link_to 'Go Back', :back, class: 'mx-3 btn-func' %>
  </div>
</div>

<div class= "text-center container-home">
  <h1 class= "p-5"> Funcionários </h1>

  <div class= "d-flex p-5 text-center">
    <table class="table">
      <thead class="thead">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">CPF</th>
          <th scope="col">Benefícios</th>
          <th scope="col">Empresa</th>
        </tr>
      </thead>
      <tbody >
          <% @funcionarios.each do |funcionario| %>
            <tr>
              <th scope="row"><%= funcionario.id%></th>
              <td><%= link_to funcionario_path(funcionario), id: "text-name-index" do%>
                    <%=funcionario.name.capitalize%>
                  <% end %>
              </td>
              <td><%= funcionario.cpf %></td>
              <td>
                <% funcionario.planos.each do |plano|%>
                  <p><%= plano.nome.capitalize %></p>
                <%end%>
              </td>
              <td><%= funcionario.user.nickname.capitalize %></td>
              <td>
                <%= link_to edit_funcionario_path(funcionario), class: "edit_link" do %>
                  <i class="far fa-edit text-info"></i>
                <% end %>
                <%= link_to  funcionario_path(funcionario), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_link" do %>
                  <i class="fas fa-trash-alt text-danger"></i>
                <% end %>
              </td>
            </tr>
          <%end%>
      </tbody>
    </table>
  </div>
  <div class= "p-3">
    <%= link_to 'New', new_funcionario_path , class: 'btn-func' %>
    <%= link_to 'Go Back', :back, class: 'mx-3 btn-func' %>
  </div>
</div>

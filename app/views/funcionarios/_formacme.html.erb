<div class='row justify-content-center'>
  <%= simple_form_for [ @funcionario ] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.label :name %>
          <%= f.email_field :name, autofocus: true, autocomplete: 'nome', class: 'form-control' %>
        </div>
      </div>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.label :cpf %>
          <%= f.email_field :cpf, autofocus: true, autocomplete: 'cpf', class: 'form-control' %>
        </div>
      </div>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.label :data_admissao %>
          <%= f.email_field :data_admissao, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
      </div>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
      </div>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.label :peso %>
          <%= f.email_field :peso, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
      </div>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.label :altura %>
          <%= f.email_field :altura, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
      </div>
      <div class='row mt-2 justify-content-center'>
        <div class="text-left">
          <%= f.hidden_field :user, value: current_user %>
        </div>
      </div>
      <div class='d-flex justify-content-center mt-5' >
        <%= link_to "Back", funcionarios_path, class: "btn btn-home" %>
        <%= f.submit "Cadastrar", class: "btn btn-home mx-3" %>
      </div>
  <% end %>
</div>

<div class='d-flex flex-column align-items-center'>
  <h1>Novo Funcion√°rio</h1>

    <%= simple_form_for [ @funcionario ] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :cpf %>
        <%= f.input :peso, value: "Kg" %>
        <%= f.input :altura %>
        <%= f.input :data_admissao %>
        <%= f.input :horas_meditadas %>
        <%= f.input :email %>
        <%= f.input :endereco %>
      </div>
      <div class='d-flex justify-content-center' >
        <%= link_to "Back", funcionarios_path, class: "btn btn-secondary" %>
        <%= f.submit class: "btn btn-secondary mx-3" %>
      </div>
    <% end %>
  </div>
</div>

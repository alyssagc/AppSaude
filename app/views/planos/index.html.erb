<div class='d-flex flex-column container-home'>
  <div class='text-center p-5'>
    <h1><%= current_user.nickname%> </h1>
  </div>
  <div class="card p-5 justify-content-between ">
    <div class='text-center'>
      <h2> Meus Benefícios contratados: </h2>
    </div>
    <div class='planos-container'>
      <% @planos.each do |plano| %>
       <h4 class='m-2'><i class="fas fa-hand-point-right mr-3 text-info"></i><%= link_to plano.nome, plano_path(plano), class: "planos-name text-decoration-none" %></h4>
      <%end%>
    </div>
    <div class='d-flex justify-content-around btn-planos'>
      <h5><%= link_to 'Back', root_path, class: "btn-home" %></h5>
      <h5><%= link_to 'Adicionar novo benefício', '', class: "btn-home " %></h5>
    </div>
  </div>
</div>
